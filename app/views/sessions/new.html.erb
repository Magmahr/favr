<h3><%= flash[:notice] %></h3>

<h1>Login</h1>
<br>
<%= form_tag "/login", method: :post do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <input type='submit' value='Login'>
<% end %>
<br>
<h6>Not a member? Sign up <%= link_to "here", new_user_path %></h6>
